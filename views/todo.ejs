<!DOCTYPE html>
<html lang="en" dir="ltr" class="todo-html">

<head>
  <meta charset="utf-8">
  <title>ToDo List</title>
  <link rel="stylesheet" href="css/styles.css">
  <link rel="icon" href="images/icon.ico">
</head>

<body class="todo-html">
  <div class="boxe-todo" id="heading">
    <h1> <%= listTitle %></h1>
  </div>
  <div class="box-todo">
    <% for(var i=0;i< listItems.length ; i++) { %>
      <form class="" action="/delete" method="post">
        <div class="item">
          <input class="checkbox" type="checkbox" name="checkbox" value="<%= listItems[i] %>" onchange="this.form.submit()">
          <p class="para" id="para"> <%= listItems[i] %> </p>
        </div>
        <input type="hidden" name="userEmail" value="<%= userEmail %>"></input>
      </form>

    <% } %>
    <form class="item" action="/todo" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button class="listBtn" type="submit" name="btn" value="<%= userEmail %>">+</button>
    </form>
  </div>

</body>

</html>
